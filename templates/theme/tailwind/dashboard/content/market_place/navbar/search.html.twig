<div class="p-2 float-end max-w-full">
    <form method="get" name="search">
        <label for="search" class="sr-only">{{ 'title.search'|trans }}</label>
        <div class="relative">
            <div class="absolute inset-y-0 rtl:inset-r-0 start-0 flex items-center ps-3 pointer-events-none">
                <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" aria-hidden="true"
                     xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                          stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"></path>
                </svg>
            </div>
            <input type="text" onkeydown="this.submit" id="search" name="search"
                   class="block w-full p-2 ps-10 bg-white text-sm text-gray-900 border border-gray-300 rounded-lg focus:placeholder-white focus:ring-gray-400 focus:border-gray-300 dark:bg-gray-700 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-gray-500 dark:focus:border-gray-500"
                   placeholder="{{ 'title.search'|trans }}">
        </div>
    </form>
</div>